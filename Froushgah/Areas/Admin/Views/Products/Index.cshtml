@model IEnumerable<DataLayer.Products>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">افزودن محصول جدید</a>
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageProduct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TitleProduct)
        </th>
        <th>
            گروه های این محصول
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PriceProduct)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.CreateDateProduct)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img class="thumbnail" src="~/images/ProductImage/Thumbnail/@item.ImageProduct" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TitleProduct)
        </td>
        <td>
            @if (item.Product_Selected_Groups.Any())
            {
            <ol>
                @foreach (var group in item.Product_Selected_Groups)
                {
                    <li>
                        @group.Product_Groups.GroupTitle
                    </li>
                }
            </ol>
            }
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.PriceProduct)
        </td>

        <td>
            @item.CreateDateProduct.ToString("dddd, dd MMMM yyyy")
        </td>
        <td>
            <a class="btn btn-info btn-xs" href="@Url.Action("Feature", new { id = item.ProductID })">ویژگی های محصول</a>
            <a class="btn btn-info btn-xs" href="@Url.Action("Gallary", new { id = item.ProductID })">گالری محصولات</a>
            <a class="btn btn-warning btn-xs" href="@Url.Action("Edit",new { id=item.ProductID})">ویرایش محصول</a>
            <a class="btn btn-danger btn-xs" href="@Url.Action("Delete",new { id=item.ProductID})">حذف</a>
        </td>
    </tr>
}

</table>
