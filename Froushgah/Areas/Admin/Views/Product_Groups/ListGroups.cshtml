@model IEnumerable<DataLayer.Product_Groups>



<table class="table table-bordered">
    <tr>
        <th>
            عنوان گروه
        </th>
        <th>
            زیر گروه ها
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="Group_@item.GroupID">
            <td>
                @Html.DisplayFor(modelItem => item.GroupTitle)
            </td>
            <td>
                @if (item.Product_Groups1.Any())
                {
                    <ul>
                        @foreach (var subGroup in item.Product_Groups1)
                        {
                        <li id="Group_@subGroup.GroupID">
                            @subGroup.GroupTitle
                            <div>
                               
                                <a class="btn btn-warning btn-xs" onclick="EditGroup(@subGroup.GroupID)">
                                    <i class="glyphicon glyphicon-edit"></i>
                                </a>
                                <a class="btn btn-danger btn-xs" onclick="DeleteGroup(@subGroup.GroupID)">
                                    <i class="glyphicon glyphicon-trash" ></i>
                                </a>

                            </div>
                         

                        </li>

                        }

                    </ul>

                }

            </td>
            <td>
                <a class="btn btn-success btn-xs" onclick="CreateNewGroup(@item.GroupID)">
                    <i class="glyphicon glyphicon-plus-sign"></i>
                </a>
                <a class="btn btn-warning btn-xs" onclick="EditGroup(@item.GroupID)">
                    <i class="glyphicon glyphicon-edit"></i>
                </a>
                <a class="btn btn-danger btn-xs">
                    <i class="glyphicon glyphicon-trash" onclick="DeleteGroup(@item.GroupID)"></i>
                </a>

            </td>
        </tr>
    }

</table>
